<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5">

    <ScrollView
        android:id="@+id/scroll_yourself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbarSize="1dp"
        android:scrollbarStyle="outsideOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_review_information"
                android:layout_gravity="center"
                android:paddingBottom="15dp"
                android:textColor="@color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

            <!--<ImageView-->
                <!--android:id="@+id/review_company_logo"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@drawable/alliance_view"/>-->

            <TextView
                android:id="@+id/review_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:text="Allianze Worldwide Care"
                android:textStyle="bold"
                android:textSize="@dimen/text_15"
                android:textColor="@color/black"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/review_policy_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_policy_start"
                        android:layout_gravity="start"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_policy_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="@string/apply_policy_end"
                        android:layout_gravity="start"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/compare_divider">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14"
                    android:paddingStart="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_idv"
                        android:layout_gravity="start"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_idv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="20000 OMR"
                        android:layout_gravity="start"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4.1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@color/compare_divider"
                    android:paddingTop="5dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Charlize Theron"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_age"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_mobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_mobile"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_nationalID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="National ID: "
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_email"
                        android:textColor="@color/black"
                        android:paddingBottom="10dp"/>

                    <TextView
                        android:id="@+id/review_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_office"
                        android:textColor="@color/black"
                        android:paddingBottom="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/compare_divider">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_vehicle_usage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Toyota Land Cruiser"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type: "
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_make"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make: "
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model: "
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_variant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Variant: "
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_reg_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place of Registration: 22/05/2016"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_reg_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Registration: "
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/review_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.6"
                    android:orientation="horizontal">
                    <HorizontalScrollView
                        android:id="@+id/horizontal_scroll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">
                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/button_pay_amount"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/button_next" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_terms"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_terms_of_use"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>