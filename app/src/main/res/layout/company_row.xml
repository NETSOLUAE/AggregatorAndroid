<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_background"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.22">

        <CheckBox
            android:id="@+id/selected_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:buttonTint="@color/colorPrimary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="5dp"
        android:layout_weight="0.95">

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

        <!--<ImageView-->
            <!--android:id="@+id/company_logo"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/alliance" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.98"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18762.667"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" OMR"
                android:textStyle="bold"
                android:textAppearance="?android:attr/absListViewStyle"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <TextView
            android:id="@+id/breakup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/compare_breakup"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.84"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/view"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:text="@string/button_view"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_view_company"/>
        <Button
            android:id="@+id/buy"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:text="@string/button_apply"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_buy"/>

    </LinearLayout>

</LinearLayout>